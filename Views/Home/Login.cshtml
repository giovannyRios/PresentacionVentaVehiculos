@using ventaVehiculosModels.Models
@model dateUsersModels
@{
    ViewBag.Title = "Login";
}

<h2 style="text-align:center">Login</h2>
@using (Html.BeginForm("Login", "Home", new { ReturnUrl = ViewBag.Url }, FormMethod.Post, new { @class = "form-horizontal", role="form" }))
{
    @Html.AntiForgeryToken()
    <div class="box-login">
        <div class="form-group">
            @Html.LabelFor(p => p.user, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(p => p.user, new { htmlAttributes = new { @class = "form-control", @id = "txtUserLogin", @autocomplete = "off", placeholder = "Ingrese usuario" } })
                @Html.ValidationMessageFor(m => m.user, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.pass, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(p => p.pass, new { htmlAttributes = new { @class = "form-control", @type = "password", @id = "txtPassLogin", placeholder = "Ingrese contraseña" } })
                @Html.ValidationMessageFor(m => m.pass, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Ingresar" class="btn btn-primary" style="min-width:230px;" />
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>

}

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")    
}




